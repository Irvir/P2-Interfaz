<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.hellofx.HelloController">

        <Label fx:id="welcomeText" text="Bienvenido al Gato de Gatos!" style="-fx-font-size: 50"/>

        <TextField fx:id = "inputField" promptText="Ingrese su nombre de Usuario" prefWidth="500" style="-fx-font-size: 20; ">
            <VBox.margin>
                <Insets bottom="20.0" left="200.0" right="200.0" top="20.0"/>

            </VBox.margin>
        </TextField>

        <VBox.margin>
        </VBox.margin>



    <Label fx:id="FirstOption" text="1. Empezar Juego.&#10;2.Cargar Jugadores.&#10;3. Salir.&#10;Seleccione una opción:" style="-fx-font-size: 20"/>

    <TextField fx:id = "inputField2" promptText="Ingrese su Opción" style="-fx-font-size: 16px; -fx-pref-width: 250px;" prefWidth="500">
        <VBox.margin>
            <Insets bottom="20.0" left="200.0" right="200.0" top="20.0"/>
        </VBox.margin>
    </TextField>
    <Label fx:id="SecondOption" text="1. Humano vs Humano.&#10;2. Humano vs PC Fácil.&#10;3. Humano vs PC Difícil.&#10;Seleccione una opción:" style="-fx-font-size: 20"/>

    <Button text="Aceptar" onAction="#nameUser"/>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>



</VBox>
